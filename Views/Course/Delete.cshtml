@model WebAppMVC.Models.Course
@{
  ViewData["Title"] = "Hapus Course";
}

<h2>Hapus Course</h2>
<h3>Apakah Anda yakin ingin menghapus course ini?</h3>
<div>
  @* <h4>Participant</h4> *@
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      Course Name
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.CourseName)
    </dd>
    <dt class="col-sm-2">
      Lecturer
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Lecturer)
    </dd>
    <dt class="col-sm-2">
      Schedule
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Day), 
      @Html.DisplayFor(model => model.Start) -
      @Html.DisplayFor(model => model.End)
    </dd>
    <dt class="col-sm-2">
      Place
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Place)
    </dd>
  </dl>
  <form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Hapus" class="btn btn-danger" /> 
    <a class="btn btn-primary" asp-action="Index">Kembali ke Daftar</a>
  </form>
</div>